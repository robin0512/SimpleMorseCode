                    android:textSize="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_h_v"
                    android:layout_width="350dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:text="Have&#10;(HV)"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_p_s_e"
                    android:layout_width="350dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:text="Please&#10;(PSE)"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_r"
                    android:layout_width="350dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:text="Received&#10;(R)"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_s_n"
                    android:layout_width="350dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:text="Soon&#10;(SN)"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_s_r_i"
                    android:layout_width="350dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:text="Sorry&#10;(SRI)"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_s_o_s"
                    android:layout_width="350dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:text="Save our souls&#10;(SOS)"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_t_n_x"
                    android:layout_width="350dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:text="Thanks&#10;(TNX)"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </TableLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>