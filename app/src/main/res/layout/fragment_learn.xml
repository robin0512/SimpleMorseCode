<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.learn.LearnFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_a_a"
                    android:layout_width="350dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:text="All after&#10;(AA)"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_a_b"
                    android:layout_width="350dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:text="All before&#10;(AB)"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_a_b_t"
                    android:layout_width="350dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:text="About&#10;(ABT)"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_a_d_s"
                    android:layout_width="350dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:text="Address&#10;(ADS)"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_a_g_n"
                    android:layout_width="350dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:text="Again&#10;(AGN)"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_c"
                    android:layout_width="350dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:text="Yes&#10;(C)"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_c_f_m"
                    android:layout_width="350dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:text="Confirm&#10;(CFM)"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_c_l_g"
                    android:layout_width="350dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:text="Calling&#10;(CLG)"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_c_u_l"
                    android:layout_width="350dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:text="See you later&#10;(CUL)"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_c_u_z"
                    android:layout_width="350dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:text="Because&#10;(CUZ)"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_d_e"
                    android:layout_width="350dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:text="From&#10;(DE)"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_d_x"
                    android:layout_width="350dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:text="Distance&#10;(DX)"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_e_s"
                    android:layout_width="350dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:text="And&#10;(ES)"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_g_a"
                    android:layout_width="350dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:text="Good afternoon&#10;(GA)"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_g_e"
                    android:layout_width="350dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:text="Good evening&#10;(GE)"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_g_m"
                    android:layout_width="350dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:text="Good morning&#10;(GM)"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_g_u_d"
                    android:layout_width="350dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
